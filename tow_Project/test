/* General blockquote styling */
blockquote {
  font-style: italic;
  margin: 2em;
  padding: 0;
  position: relative; /* Needed for absolute positioning of pseudo-elements */
  margin-block-start: 1em;
  margin-block-end: 1em;
  margin-inline-start: 40px;
  margin-inline-end: 40px;
  unicode-bidi: isolate;
}

/* Style for the pseudo-elements */
blockquote p::before {
  content: '“'; /* Opening quote */
  position: absolute;
  font-size: 4em;
  top: -0.25em;  /* Adjust as needed */
  left: -0.5em;  /* Adjust as needed */
  color: rgba(255, 255, 255, 0.30); /* Light color for the quote */
  font-style: normal;
}

blockquote p::after {
  content: '”'; /* Closing quote */
  position: absolute;
  font-size: 4em;
  bottom: -0.25em;  /* Adjust as needed */
  right: -0.5em;  /* Adjust as needed */
  color: rgba(255, 255, 255, 0.30); /* Light color for the quote */
  font-style: normal;
}

